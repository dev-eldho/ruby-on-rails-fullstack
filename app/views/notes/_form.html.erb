<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>
      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container" style="min-height: 42em;">
    <div class="row">
      <div class="col-12 col-md-1">
        <p><label for = "note_title">Title</label>
      </div>
      <div class="col-1 col-md-1">
       <%= text_field 'note', 'title' %></p>
      </div>
    </div>
    <div class="row">
     <div class="col-12 col-md-1">
      <p><label for = "note_description">Description</label>
      </div>
      <div class="col-1 col-md-2">
        <%= text_area 'note', 'description' %></p> 
      </div>     
     </div>   
    <div class="row">
     <div class="col-12 col-md-1">  
     </div>
     <div class="col-12 col-md-1"> 
       <%= form.submit 'Save', class: "btn btn-success"  %>
     </div>
    </div>
  </div>
<% end %>
